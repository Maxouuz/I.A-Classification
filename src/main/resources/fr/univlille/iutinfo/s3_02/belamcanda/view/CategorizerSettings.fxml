<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="categorizerSettings" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univlille.iutinfo.s3_02.belamcanda.view.controller.CategorizerSettingsController">
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Valeur de K:" />
            <Spinner fx:id="kSpinner" editable="true" GridPane.columnIndex="1" />
         </children>
      </GridPane>
      <TableView fx:id="columnList" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="nameColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="90.0" text="Attribut" />
            <TableColumn fx:id="weightColumn" prefWidth="63.0" text="Poids" />
            <TableColumn fx:id="isUsedColumn" minWidth="-1.0" prefWidth="60.0" text="Utiliser" />
         </columns>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </TableView>
   </children>
</VBox>
