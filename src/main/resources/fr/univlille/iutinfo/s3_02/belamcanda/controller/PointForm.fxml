    </GridPane>
    <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#createPoint" prefHeight="30.0" prefWidth="200.0"
            text="Ajouter un point">
        <VBox.margin>
          <Insets top="10.0"/>
        </VBox.margin>
    </Button>
